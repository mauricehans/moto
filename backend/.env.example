# ========================================
# CONFIGURATION DE SÉCURITÉ - AGDE MOTO
# ========================================

# Django Settings - CRITIQUE POUR LA SÉCURITÉ
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Configuration HTTPS - OBLIGATOIRE EN PRODUCTION
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Database (PostgreSQL recommandé pour la production)
DB_NAME=agde_moto
DB_USER=agde_moto_user
DB_PASSWORD=your-secure-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Cache (Redis pour la production)
REDIS_URL=redis://127.0.0.1:6379/1

# Configuration JWT - SÉCURITÉ RENFORCÉE
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CORS - RESTRICTIF EN PRODUCTION
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# File uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# ========================================
# INSTRUCTIONS DE SÉCURITÉ
# ========================================
# 1. Changez SECRET_KEY par une clé unique et complexe
# 2. Définissez DEBUG=False en production
# 3. Configurez ALLOWED_HOSTS avec vos domaines réels
# 4. Activez HTTPS avec SECURE_SSL_REDIRECT=True
# 5. Utilisez PostgreSQL au lieu de SQLite en production
# 6. Configurez Redis pour le cache et les sessions
# 7. Limitez CORS_ALLOWED_ORIGINS aux domaines autorisés
# 8. Surveillez les logs de sécurité régulièrement